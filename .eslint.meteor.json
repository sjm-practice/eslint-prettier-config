{
  "plugins": [
    "meteor",
    "react"
  ],
  "extends": [
    "airbnb",
    "plugin:meteor/recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "spread": true,
      "modules": true,
      "blockBindings": true,
      "destructuring": true,
      "arrowFunctions": true
    }
  },
  "settings": {
    "import/core-modules": [
      "meteor/meteor",
      "meteor/accounts-base",
      "meteor/mongo"
    ]
  },
  "rules": {
    "semi": "error",
    "no-console": "warn",
    "no-multi-spaces": [
      "warn",
      {
        "ignoreEOLComments": true
      }
    ],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_execute",
          "_sleepForMs"
        ]
      }
    ],
    "react/no-danger": "warn",
    "react/require-default-props": "warn",
    "react/sort-comp": [
      "warn",
      {
        "order": [
          "props",
          "static-methods",
          "lifecycle",
          "everything-else",
          "render"
        ],
        "groups": {
          "props": [
            "props",
            "defaultProps"
          ]
        }
      }
    ],
    "meteor/eventmap-params": [
      "error",
      {
        "templateInstanceParamName": "instance"
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "^meteor/"
        ]
      }
    ],
    "import/extensions": "ignorePackages",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "jsx-a11y/no-static-element-interactions": "warn"
  }
}
